{
  "manifest_version": 3,
  "name": "Horizon",
  "version": "1.2",
  "description": "Keeps track of your doomscrolling and helps you take breaks before you get sucked in.",
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}